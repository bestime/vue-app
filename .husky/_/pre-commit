#!/bin/bash
ALLOWED_EMAIL="1174295440@qq.com"

# 获取提交者邮箱
email=$(git config user.email)

# 获取本次提交暂存区修改的文件列表
files=$(git diff --cached --name-only)

for file in $files; do
  # 判断是否属于 src/plugins/jcy 目录
  if [[ "$file" == src/plugins/jcy/* ]]; then
    if [[ "$email" != "$ALLOWED_EMAIL" ]]; then
      echo "❌ 错误：目录 [src/plugins/jcy] 只能由作者 $ALLOWED_EMAIL 提交，当前邮箱：$email"
      exit 1
    fi
  fi
done

exit 0
